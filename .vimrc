
set tabstop=4
set shiftwidth=4
set expandtab
set number

" Make backspace behave in a sane manner.
set backspace=indent,eol,start

" Switch syntax highlighting on
syntax on

set incsearch
set hlsearch

set exrc
set secure

set breakindent
" set showbreak=\\\\\
set conceallevel=0

set autoread
set noswapfile

set infercase

:imap <C-C> <Esc>
